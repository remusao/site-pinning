{
  "description": "Lock sites",
  "manifest_version": 2,
  "name": "lock-sites",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "site-lock@cliqz.com"
    }
  },
  "icons": {
    "128": "assets/icon128.png",
    "48": "assets/icon48.png",
    "16": "assets/icon16.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "128": "assets/icon128.png",
      "48": "assets/icon48.png",
      "16": "assets/icon16.png"
    },
    "default_title": "Lock site",
    "default_popup": "./popup.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "content_scripts": []
}
