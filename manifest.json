{
  "description": "Lock sites",
  "manifest_version": 2,
  "name": "lock-sites",
  "version": "1.0",
  "icons": {
    "128": "assets/icon128.png",
    "48": "assets/icon48.png",
    "16": "assets/icon16.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "128": "assets/icon128.png",
      "48": "assets/icon48.png",
      "16": "assets/icon16.png"
    },
    "default_icon": "assets/icon128.png",
    "default_title": "Lock site",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": []
}
